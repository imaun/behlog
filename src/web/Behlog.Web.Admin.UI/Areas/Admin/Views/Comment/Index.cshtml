<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comment"></i> لیست دیدگاه ها
                </div>
                <div class="actions">

                    @if (Model.DataSource.CanGoPreviousPage) {
                        <a asp-controller="Contact" asp-action="Index" asp-route-page="@Model.DataSource.PreviousPage"
                           class="btn default green-stripe">
                            صفحه قبل
                        </a>
                    }

                    @if (Model.DataSource.CanGoNextPage) {
                        <a asp-controller="Contact" asp-action="Index" asp-route-page="@Model.DataSource.NextPage"
                           class="btn default green-stripe">
                            صفحه بعد
                        </a>
                    }


                    <a href="javascript:;" class="btn default btn-sm">
                        <i class="fa fa-share icon-black"></i> Share
                    </a>

                    <div class="btn-group">
                        <a class="btn btn-sm green" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-user"></i> عملیات <i class="fa fa-angle-down "></i>
                        </a>
                        <ul class="dropdown-menu pull-right" style="font-family: 'IRANsans'">
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-trash-o"></i> حذف انتخاب شده ها
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-ban"></i> Ban
                                </a>
                            </li>
                            <li class="divider">
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="i"></i> Make admin
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">

                @if (Model.DataSource.IsNotEmpty) {
                    <div class="todo-tasklist">

                        @foreach (var comment in Model.DataSource.Items) {
                            string stateClassName = "todo-tasklist-item-border-yellow";
                            string badgeClassName = "";
                            switch (comment.Status) {
                                case Behlog.Core.Models.Enum.CommentStatus.Deleted:
                                    stateClassName = "todo-tasklist-item-border-red";
                                    badgeClassName = "danger";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Rejected:
                                    stateClassName = "todo-tasklist-item-border-red";
                                    badgeClassName = "danger";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Waiting:
                                    stateClassName = "todo-tasklist-item-border-yellow";
                                    badgeClassName = "warning";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Spam:
                                    stateClassName = "todo-tasklist-item-border-gray";
                                    badgeClassName = "primary";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Viewed:
                                    stateClassName = "todo-tasklist-item-border-blue";
                                    badgeClassName = "success";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Read:
                                    stateClassName = "todo-tasklist-item-border-blue";
                                    badgeClassName = "success";
                                    break;
                                case Behlog.Core.Models.Enum.CommentStatus.Approved:
                                    stateClassName = "todo-tasklist-item-border-green";
                                    badgeClassName = "";
                                    break;
                            }

                            <div id="divContact" data-id="@comment.Id" class="todo-tasklist-item @stateClassName">
                                <span class="pull-left"><i class="fa fa-user-o"></i> </span>
                                <div id="divContactTitle_@comment.Id" class="todo-tasklist-item-title">
                                    <input type="checkbox" id="chkSelectContact_@comment.Id" class="form-check-input" />
                                    @comment.Title
                                </div>
                                <div class="todo-tasklist-item-li">
                                    <b>@comment.PostTitle</b>
                                </div>
                                <div class="todo-tasklist-item-il">
                                    @Html.Raw(comment.Body)
                                </div>
                                <div class="row">
                                    <div class="col-sm-8">

                                    </div>
                                    <div class="col-sm-4" style="text-align: left">
                                        <a class="btn btn-danger delete-dialog" id="btnRemove" href="#remove" data-id="@comment.Id" data-toggle="modal"><i class="fa fa-trash-o"></i> حذف</a>
                                        @*<a class="btn btn-danger" href="#">حذف <i class="fa fa-trash-o"></i></a>*@
                                    </div>
                                </div>
                                <div class="todo-tasklist-controls pull-left">
                                    <span class="todo-tasklist-date"><i class="fa fa-inbox"></i>آدرس ایمیل :<a href="mailto:@comment.Email">@comment.Email</a> </span>
                                    <span class="todo-tasklist-date"><i class="fa fa-phone"></i>شماره تماس : <a href="@comment.WebUrl">@comment.WebUrl </a>  </span>
                                </div>
                                <div class="todo-tasklist-controls pull-right">
                                    <span class="todo-tasklist-date"><i class="fa fa-calendar"></i> تاریخ : @comment.CreateDateDisplay </span>
                                    <span class="todo-tasklist-date"><i class="fa fa-user"></i> IP :  @comment.IP </span>
                                </div>
                            </div>
                        }

                    </div>
                }
                else {
                    if (Model.DataSource.HasFilter) {
                        <div class="note note-danger">
                            <h4 class="block">نتیجه ای برای جستجوی شما یافت نشد!</h4>
                            <p>
                                لطفاً مقادیر فیلترها را بررسی کنید. اگر مطمئن نیستید، فیلترها را حذف و دوباره سعی نمایید.
                            </p>
                        </div>
                    }
                    else {
                        <div class="note note-danger">
                            <h4 class="block">هنوز دیدگاهی برای نوشته های وب سایت شما ارسال نشده است!</h4>
                            <p>
                                زمانی که بازدیدکنندگان روی نوشته های شما دیدگاه بگذارند،
                                ما به شما اطلاع می‌دهیم و از اینجا می‌توانید آن دیدگاه ها را مدیریت کنید.
                            </p>
                        </div>
                    }

                }


            </div>
            <div class="form-actions" style="padding-top: 15px">
                <div class="row">
                    <div class="col-sm-4">
                        <span>صفحه @Model.Filter.CurrentPage از @Model.Filter.TotalPages </span> |
                        <span>تعداد کل رکوردها: @Model.DataSource.TotalCount.ToString("N0") </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

