
@using Behlog.Web.Identity.Controllers
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="ورود به بهلاگ">
    <meta name="author" content="Behlog">
    <title>بهلاگ - ورود</title>
    <link href="~/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/bootstrap/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/fonts.css" rel="stylesheet" type="text/css">
    <link href="~/assets/admin/css/login-rtl.css" rel="stylesheet">
    <link href="~/assets/css/components-md-rtl.css" rel="stylesheet">
    <link href="~/assets/css/plugins-md-rtl.css" rel="stylesheet">
    <link href="~/assets/admin/css/themes/darkblue-rtl.css" rel="stylesheet">
    <link href="~/assets/admin/css/custom-rtl.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/assets/admin/behlog.ico" />
</head>
<body class="page-md login">
    <div class="menu-toggler sidebar-toggler">
    </div>
    <div class="logo">
        <a href="index.html">
            <img src="~/assets/admin/logo/behlog-256.png" alt="" />
        </a>
    </div>
    <div class="content">
        <form class="login-form" asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData[LoginController._RET_URL]"
              method="post"
              autocomplete="off">
            <h3 class="form-title">ورود به حساب کاربری</h3>
            <partial name="_validationSummary" />
            <div class="form-group">
                <label asp-for="Username" class="control-label visible-ie8 visible-ie9"></label>
                <div class="input-icon">
                    <i class="fa fa-user fa-2x"></i>
                    <input asp-for="Username" class="form-control input-lg placeholder-no-fix" placeholder="نام کاربری..." style="direction: ltr" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label visible-ie8 visible-ie9"></label>
                <div class="input-icon">
                    <i class="fa fa-lock fa-2x"></i>
                    <input asp-for="Password" dir="ltr" type="password" class="form-control input-lg form-control-solid placeholder-no-fix" placeholder="کلمه عبور..." />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sign-in fa-lg"></i> ورود</button>
            </div>
            <div class="login-options">
                <label class="rememberme check">
                    <input asp-for="RememberMe" type="checkbox" />  مرا بخاطر داشته باش
                </label>
                <a href="javascript:;" id="forget-password" class="forget-password">کلمه عبور را فراموش کردین!؟</a>
            </div>
        </form>
    </div>
    @*<footer class="footer">
        <div class="container">
            <span class="text-muted">
                © 2020 Copyright:
                سیستم مدیریت محتوای وب سایت
                <a href="http://behlog.ir/"> Behlog | بهلاگ</a>
            </span>
        </div>
    </footer>*@
    <footer class="page-footer font-small unique-color-dark pt-4">
        <div class="footer-copyright text-center py-3">
            © 2020 Copyright:
            سیستم مدیریت محتوای وب سایت
            <a href="http://behlog.ir/"> Behlog | بهلاگ</a>
        </div>

    </footer>
    <!-- Footer -->
    <script src="@Url.Content("~/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/popper/popper.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery-validation/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery-validation/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/jquery-easing/jquery.easing.min.js")" type="text/javascript"></script>
    <script src="~/assets/plugins/uniform/jquery.uniform.js" type="text/javascript"></script>
    <script language="javascript">
        $(document).ready(function () {
            $("#Username").focus();
        });
    </script>
</body>
</html>


